{
  "packages": ["packages/@o-w-o/*"],
  "version": "independent",
  "npmClient": "npm",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore($release): :bookmark: packages has published!",
      "version": {
        "allowBranch": ["master"]
      }
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"],
      "hoist": ["typescript"]
    }
  }
}
