{
  "packages": ["packages/@o-w-o/*"],
  "version": "1.0.0",
  "npmClient": "npm",
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore($release): :bookmark: packages has published!",
      "version": {
        "allowBranch": ["master"]
      }
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
